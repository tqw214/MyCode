<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.viger.customview.view.MyTextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:text="适配文字"/>

    <Button
        android:id="@+id/btn_view01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义TextView" />

    <Button
        android:id="@+id/btn_view02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="仿QQ运动步数进度效果" />

    <Button
        android:id="@+id/btn_view03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="字体变色" />
    <Button
        android:id="@+id/btn_view04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="流式布局" />
    <Button
        android:id="@+id/btn_view05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="圆形进度条" />

</LinearLayout>